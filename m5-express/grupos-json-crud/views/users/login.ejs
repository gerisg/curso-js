<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head', { title: 'Login de usuario' }) %>
<body>
    <%- include('../partials/header') %>
    <main>
        <div class="container">
            <section>
                <div class="columns is-centered">
                    <div class="column is-6">
                        <h1>Iniciar Sesión</h1>
                        <form action="/users/login" method="POST">

                            <div class="field">
                                <label for="email">Email</label>
                                <div class="control">
                                    <input type="email" name="email">
                                </div>
                                <p class="feedback <%= locals.errors && errors.email ? 'is-danger' : '' %>">
                                    <%= locals.errors && errors.email ? errors.email.msg : '' %>
                                </p>
                            </div>

                            <div class="field">
                                <label for="password">Contraseña</label>
                                <div class="control">
                                    <input type="password" name="password">
                                </div>
                                <p class="feedback <%= locals.errors && errors.password ? 'is-danger' : '' %>">
                                    <%= locals.errors && errors.password ? errors.password.msg : '' %>
                                </p>
                            </div>

                            <p class="feedback <%= locals.errors && errors.form ? 'is-danger' : '' %>">
                                <%= locals.errors && errors.form ? errors.form.msg : '' %>
                            </p>
                            
                            <div class="field">
                                <div class="control">
                                    <button type="submit">Iniciar Sesión</button>
                                </div>
                            </div> 
                        </form>  
                    </div>
                </div>
            </section>
        </div>
    </main>
</body>
</html>